
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to notifications, but only authenticated users can create them.
    match /notifications/{notificationId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Nobody can change/delete from client
    }

    // Allow public read for app status, but only authenticated users can change it.
    match /app-status/maintenance {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
